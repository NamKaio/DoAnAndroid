<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.doanandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Quản lý Đồ Uống"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.doanandroid.MainActivity" />
        <activity
            android:name="com.example.doanandroid.utils.StartScreen"
            android:theme="@style/StartScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.doanandroid.DetailActivity"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name="com.example.doanandroid.CartActivity"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>
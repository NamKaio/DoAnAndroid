<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity"
    android:columnCount="4">

    <Button
        android:id="@+id/btCartHome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="0"
        android:layout_column="0"
        android:background="@drawable/home"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:text="Tổng tiền: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#181818"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvCartSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:text="Tổng tiền"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FE6810"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btCartBuy"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_row="0"
        android:layout_column="3"
        android:text="Mua hàng"
        android:textSize="20sp"
        android:textColor="#F3F3F2"
        android:layout_gravity="right"
        android:background="@drawable/custom_button_delete"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:background="#F3F3F2"/>

    <GridView
        android:id="@+id/gridViewCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_marginBottom="80dp"/>

</GridLayout>